# Environment variables template
# Copy this to .env and fill in your values

SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DATABASE_URL=sqlite:///db.sqlite3

# Cloudinary configuration (optional for local dev, required for Railway)
# Sign up at https://cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Discord webhook notifications (optional)
# Create webhooks in Discord: Server Settings → Integrations → Webhooks
# You can use a single webhook for all samples, or separate ones per difficulty
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_DEFAULT_WEBHOOK
DISCORD_WEBHOOK_EASY=https://discord.com/api/webhooks/YOUR_EASY_WEBHOOK
DISCORD_WEBHOOK_MEDIUM=https://discord.com/api/webhooks/YOUR_MEDIUM_WEBHOOK
DISCORD_WEBHOOK_ADVANCED=https://discord.com/api/webhooks/YOUR_ADVANCED_WEBHOOK
DISCORD_WEBHOOK_EXPERT=https://discord.com/api/webhooks/YOUR_EXPERT_WEBHOOK

# Email configuration (for user registration and password reset)
# For development: Leave EMAIL_BACKEND commented out to use console backend (prints to terminal)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-user-name@your-domain.com
EMAIL_HOST_PASSWORD=your-mailgun-smtp-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Base URL for your site (used in email links), localhost for testing
BASE_URL=http://localhost:8000

# Impressum/Contact Details (used in legal pages)
IMPRESSUM_NAME=your-name-here
IMPRESSUM_ADDRESS_LINE1=your-street-address
IMPRESSUM_ADDRESS_LINE2=your-city-zip-country
IMPRESSUM_PHONE=your-phone-number
IMPRESSUM_EMAIL=your-email-address

# Cloudflare/Security Settings (for production)
# Set to False if not using Cloudflare proxy or in development
SECURE_SSL_REDIRECT=True

# CSRF Trusted Origins (add your domain for production)
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com
