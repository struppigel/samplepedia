# Environment variables template
# Copy this to .env and fill in your values

SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DATABASE_URL=sqlite:///db.sqlite3

# Cloudinary configuration (optional for local dev, required for Railway)
# Sign up at https://cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Discord webhook notifications (optional)
# Create webhooks in Discord: Server Settings → Integrations → Webhooks
# You can use a single webhook for all samples, or separate ones per difficulty
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_DEFAULT_WEBHOOK
DISCORD_WEBHOOK_EASY=https://discord.com/api/webhooks/YOUR_EASY_WEBHOOK
DISCORD_WEBHOOK_MEDIUM=https://discord.com/api/webhooks/YOUR_MEDIUM_WEBHOOK
DISCORD_WEBHOOK_ADVANCED=https://discord.com/api/webhooks/YOUR_ADVANCED_WEBHOOK
DISCORD_WEBHOOK_EXPERT=https://discord.com/api/webhooks/YOUR_EXPERT_WEBHOOK
